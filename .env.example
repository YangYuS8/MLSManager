# Environment Configuration Template
# Copy this file to .env and customize for your environment

# Application
APP_NAME=ML-Server-Manager
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
# For development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./mlsmanager.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mlsmanager

# Security
# IMPORTANT: Change this in production!
SECRET_KEY=your-secret-key-change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Node Configuration
NODE_TYPE=master
NODE_ID=master-001
# For worker nodes, set MASTER_URL:
# MASTER_URL=http://master-host:8000

# Redis (optional, for Celery task queue)
REDIS_URL=redis://localhost:6379/0
