# Development Dockerfile with hot-reload
FROM golang:1.25-alpine

WORKDIR /app

RUN apk add --no-cache git ca-certificates bash docker-cli

# Install air for hot-reload
RUN go install github.com/air-verse/air@latest

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN mkdir -p /data /etc/ml-agent

# Environment variables are loaded from .env.dev via docker-compose
# Only set minimal required defaults here
ENV AGENT_STORAGE_PATH=/data

CMD ["air", "-c", ".air.toml"]
