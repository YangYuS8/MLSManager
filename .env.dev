# =============================================================================
# ML-Server-Manager Development Environment Configuration
# =============================================================================
# This file is loaded by:
# - Makefile (local development commands)
# - docker-compose.dev.yml (Docker development environment)
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=mlsmanager
POSTGRES_PASSWORD=mlsmanager_secret
POSTGRES_DB=mlsmanager
# For local development (outside Docker)
DATABASE_URL=postgresql+asyncpg://mlsmanager:mlsmanager_secret@localhost:5432/mlsmanager

# =============================================================================
# RabbitMQ Configuration
# =============================================================================
RABBITMQ_DEFAULT_USER=mlsmanager
RABBITMQ_DEFAULT_PASS=mlsmanager_secret
# For local development (outside Docker)
RABBITMQ_URL=amqp://mlsmanager:mlsmanager_secret@localhost:5672//
CELERY_RESULT_BACKEND=rpc://

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=ML-Server-Manager
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=dev-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]

# =============================================================================
# Node Configuration
# =============================================================================
NODE_TYPE=master
NODE_ID=dev-master-001

# =============================================================================
# Default Admin User (created on first startup if no users exist)
# =============================================================================
DEFAULT_ADMIN_USERNAME=mlsmanager
DEFAULT_ADMIN_EMAIL=admin@mlsmanager.local
DEFAULT_ADMIN_PASSWORD=mlsmanager_secret

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# Worker Agent Configuration
# =============================================================================
# For local development (outside Docker)
AGENT_MASTER_URL=http://localhost:8000
AGENT_NODE_NAME=worker-local-dev
AGENT_HEARTBEAT_INTERVAL=30
AGENT_JOB_POLL_INTERVAL=10
AGENT_STORAGE_PATH=./worker_agent/data
AGENT_DATASETS_PATH=./worker_agent/data/datasets
AGENT_TOKEN_FILE=./worker_agent/.ml-agent/token
AGENT_DEV_MODE=true

# =============================================================================
# Build Proxy Configuration (for China network acceleration)
# =============================================================================
HTTP_PROXY=http://127.0.0.1:7897
HTTPS_PROXY=http://127.0.0.1:7897
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# Code-Server Configuration (VS Code in Browser)
# =============================================================================
CODE_SERVER_PORT=8443
CODE_SERVER_PASSWORD=mlsmanager
# Root directory for all projects (mounted to code-server)
PROJECTS_ROOT_PATH=./projects
